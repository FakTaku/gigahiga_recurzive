{
  "manifest_version": 3,
  "name": "Gigahiga Shortcuts",
  "version": "0.1.0",
  "description": "Applies developer defaults and user overrides for keyboard shortcuts.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Gigahiga Shortcuts",
    "default_popup": "popup.html"
  },
  "commands": {
    "open_palette": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open Gigahiga command palette"
    }
  }
}


